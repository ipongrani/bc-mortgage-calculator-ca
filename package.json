{
  "name": "mortgage_calculator",
  "version": "1.0.0",
  "type": "module",
  "description": "A mortgage calculator for BC Canada",
  "main": "index.js",
  "scripts": {
    "setup": "./setup.sh",
    "test": "npx jest --config jest.config.js --verbose",
    "build": "./build.sh",
    "build:api": "cd api && npx webpack",
    "build:core": "cd utilities && npx webpack",
    "build:utilities": "cd core && npx webpack",
    "serve:api": "npx nodemon --exec node ./api/server.js",
    "serve:api-dist": "node ./api/dist/server.bundle.cjs",
    "serve:core": "cd ./core && npx nodemon --exec npx webpack --watch",
    "serve:utilities": "cd ./utilities && npx nodemon --exec npx webpack --watch "
  },
  "author": "Rani Ipong",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.26.0",
    "@babel/preset-env": "^7.26.0",
    "babel-jest": "^29.7.0",
    "babel-loader": "^9.2.1",
    "jest": "^29.7.0",
    "jest-webpack": "^0.5.1",
    "nodemon": "^3.1.9",
    "supertest": "^7.0.0"
  }
}
